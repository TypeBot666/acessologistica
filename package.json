{
  "name": "logistica-whatsapp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm run install:server && npm run install:frontend",
    "install:server": "cd whatsapp-server && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev:server": "cd whatsapp-server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:server": "cd whatsapp-server && node whatsapp-server.js",
    "start:frontend": "cd frontend && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
